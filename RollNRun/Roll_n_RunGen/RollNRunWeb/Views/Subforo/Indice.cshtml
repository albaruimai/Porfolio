@model IEnumerable<RollNRunWeb.Models.SubforoViewModel>

@{
    ViewBag.Title = "Indice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bienvenido al foro</h2>
<h4>Ponte cómodo y habla con la gente</h4>

<h4>
    @Html.ActionLink("Crea tu propio subforo", "Crear")
</h4>
<div style="display: grid;
       grid-template-columns: repeat(auto-fill,minmax(250px,1fr));
       grid-gap: .5em;">
    @foreach (var item in Model)
    {
        <article style="
        background-color: saddlebrown;
        color: darkorange;
        border: 1px solid darkorange;
        padding: .5em;
        vertical-align: top;">
            <h4>
                @Html.ActionLink(item.Titulo, "Detalles", new { id = item.id })
            </h4>
            <p>
                Autor:
                @Html.DisplayFor(modelItem => item.Autor)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.Fecha)
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </p>
            <p>
                Seguidores:
                @Html.DisplayFor(modelItem => item.Seguidores)
            </p>
        </article>
    }
</div>
    